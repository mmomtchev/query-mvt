{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Launch mocha",
			"skipFiles": [
				"<node_internals>/**"
			],
			"env": {
				"NODE_OPTIONS": "--loader ts-node/esm"
			},
			"program": "${workspaceFolder}/node_modules/mocha/lib/cli/cli.js"
		}
	]
}